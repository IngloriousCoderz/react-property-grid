{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "obj": {
      "type": "object",
      "title": "obj",
      "description": "An object with optional props.",
      "additionalProperties": {
        "title": "key",
        "type": "string"
      }
    },
    "arr": {
      "type": "array",
      "title": "arr",
      "description": "An array of different items.",
      "items": {
        "anyOf": [{
          "type": "object",
          "title": "obj",
          "description": "A nested object.",
          "properties": {
            "item1": {
              "type": "string"
            }
          },
          "required": ["item1"]
        }, {
          "type": "number",
          "title": "num",
          "description": "A numeric value."
        }]
      },
      "maxItems": 3
    }
  },
  "additionalProperties": {
    "type": "object",
    "title": "optional",
    "properties": {
      "primitive": {
        "type": "number",
        "title": "primitive"
      }
    }
  }
}
